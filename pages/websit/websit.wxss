.container{
  padding:4rpx 0;
}
swiper{
  width: 100%;
  height:170px;
}
.slide-image{
  width: 100%;
}

.selection{
  width: 100%;
}
.header{
  border-left: 8rpx solid limegreen;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.header-all{
  color: limegreen;
  font-size: 24rpx;
}

.content{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}
.content-item{
  height: 200rpx;
  width: 45%;
  background: rebeccapurple;
  margin: 7rpx;
  position: relative;
}
.content-item image{
  width: 100%;
  height: 100%;
}
.content-item-text{
  position: absolute;
  bottom: 0;
  color: #fff;
  background: -webkit-linear-gradient(bottom,rgba(0, 0, 0, 0.6),rgba(0, 0, 0, 0));
  font-size: 30rpx;
  width: 100%;
  height: 50rpx;
  text-align: center;
}